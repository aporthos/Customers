<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.portes.examplefirestore.ui.ClientesActivity"
    tools:showIn="@layout/activity_clientes">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/lblId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Amadeus"
        android:hint="Nombre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lblUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="a.portes"
        android:hint="NickName"
        app:layout_constraintEnd_toEndOf="@+id/lblId"
        app:layout_constraintStart_toStartOf="@+id/lblId"
        app:layout_constraintTop_toBottomOf="@+id/lblId" />

    <EditText
        android:id="@+id/lblLastaName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Portes"
        android:hint="Apellido"
        app:layout_constraintEnd_toEndOf="@+id/lblUser"
        app:layout_constraintStart_toStartOf="@+id/lblUser"
        app:layout_constraintTop_toBottomOf="@+id/lblUser" />

    <EditText
        android:id="@+id/lblAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="25"
        android:hint="Edad"
        app:layout_constraintEnd_toEndOf="@+id/lblLastaName"
        app:layout_constraintStart_toStartOf="@+id/lblLastaName"
        app:layout_constraintTop_toBottomOf="@+id/lblLastaName" />

    <EditText
        android:id="@+id/lblEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="a.portes.dw@gmail.com"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="@+id/lblAge"
        app:layout_constraintStart_toStartOf="@+id/lblAge"
        app:layout_constraintTop_toBottomOf="@+id/lblAge" />
</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>